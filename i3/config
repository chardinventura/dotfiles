# You can also use any non-zero value if you'd like to have a border
for_window [class=".*"] border pixel 3

# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $exec exec --no-startup-id

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:monospace 8
font pango:JuliaMono 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Use amixer to adjust volume in PulseAudio.
# only amixer

bindsym Mod1+o exec pulsemixer --change-volume 1
bindsym Mod1+a exec pulsemixer --change-volume -1
bindsym Mod1+Control+o exec pulsemixer --change-volume 2
bindsym Mod1+Control+a exec pulsemixer --change-volume -2
bindsym Mod1+m exec pulsemixer --toggle-mute
# amixer + pulseaudio
#bindsym Mod1+o exec amixer -D pulse sset Master 1%+
#bindsym Mod1+a exec amixer -D pulse sset Master 1%-
#bindsym Mod1+Control+o exec amixer -D pulse sset Master 2%+
#bindsym Mod1+Control+a exec amixer -D pulse sset Master 2%-
#bindsym Mod1+m exec amixer -D pulse sset Master toggle

# Use xbacklight to adjust brightness
bindsym Mod1+u $exec brightnessctl s 7+
bindsym Mod1+e $exec brightnessctl s 7-
bindsym Mod1+Control+u $exec brightnessctl s 14+
bindsym Mod1+Control+e $exec brightnessctl s 14-

# Media player controls
bindsym Mod1+p exec playerctl play-pause
bindsym Mod1+period exec playerctl next
bindsym Mod1+comma exec playerctl previous

# Moc controls
bindsym Mod1+Control+p exec mocp --toggle-pause
bindsym Mod1+Control+period exec mocp --next
bindsym Mod1+Control+comma exec mocp --previous

# Print screen
bindsym Print exec (flameshot &) && sleep 1 && flameshot full -p $HOME/Pictures
bindsym Control+Print exec (flameshot &) && sleep 1 && flameshot full -c
bindsym Control+Shift+Print exec (flameshot &) && sleep 1 && flameshot gui

# Suspend after 10 mts when pr is inactive
# $exec xautolock -time 10 -locker "i3lock -e -f -c 000000; systemctl suspend" &

# Set wallpaper
$exec ~/.fehbg &
#
# Set video wallpaper
# $exec xwinwrap -ov -fs -ni -- mpv -wid WID -quiet -loop ~/Videos/background.mp4 &

# Suspend pc
# bindsym Mod1+Shift+s exec xautolock -locknow

# start a terminal
bindsym Mod1+Return exec alacritty

# kill focused window
bindsym Mod1+Shift+t kill

# A more modern dmenu replacement is rofi:
# outdate, it is not file-browser
# bindsym Mod1+d exec "rofi -modi drun,run,file-browser -show drun"
bindsym Mod1+d exec "rofi -modi drun,run,filebrowser -show drun"
# bindsym Mod1+d exec dmenu_run

bindsym Mod1+x exec sh ~/.config/i3/toggle_laptop_screen.sh
bindsym Mod1+Shift+x exec sh ~/.config/i3/toggle_monitor_modes.sh

# enter fullscreen mode for the focused container
bindsym Mod1+f fullscreen toggle

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# change container layout (stacked, tabbed, toggle split)
bindsym Mod1+control+j layout stacking
bindsym Mod1+control+k layout tabbed
bindsym Mod1+control+l layout toggle split

bindsym Mod1+s splith
bindsym Mod1+v splitv

# toggle tiling / floating
bindsym Mod1+Control+space floating toggle

# change focus between tiling / floating windows
bindsym Mod1+space focus mode_toggle

workspace_layout tabbed

default_orientation horizontal

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym Mod1+1 workspace number $ws1
bindsym Mod1+2 workspace number $ws2
bindsym Mod1+3 workspace number $ws3
bindsym Mod1+4 workspace number $ws4
bindsym Mod1+5 workspace number $ws5
bindsym Mod1+6 workspace number $ws6
bindsym Mod1+7 workspace number $ws7
bindsym Mod1+8 workspace number $ws8
bindsym Mod1+9 workspace number $ws9
bindsym Mod1+0 workspace number $ws10

# move focused container to workspace
bindsym Mod1+Shift+1 move container to workspace number $ws1
bindsym Mod1+Shift+2 move container to workspace number $ws2
bindsym Mod1+Shift+3 move container to workspace number $ws3
bindsym Mod1+Shift+4 move container to workspace number $ws4
bindsym Mod1+Shift+5 move container to workspace number $ws5
bindsym Mod1+Shift+6 move container to workspace number $ws6
bindsym Mod1+Shift+7 move container to workspace number $ws7
bindsym Mod1+Shift+8 move container to workspace number $ws8
bindsym Mod1+Shift+9 move container to workspace number $ws9
bindsym Mod1+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym Mod1+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod1+shift+r restart
# exit i3 (logs you out of your X session)
bindsym Mod1+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing h will shrink the window’s width.
        # Pressing k will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing j will grow the window’s height.
        bindsym h resize shrink width 10 px
        bindsym j resize grow height 10 px
        bindsym k resize shrink height 10 px
        bindsym l resize grow width 10 px

        bindsym Shift+h resize shrink width 20 px
        bindsym Shift+j resize grow height 20 px
        bindsym Shift+k resize shrink height 20 px
        bindsym Shift+l resize grow width 20 px

        # back to normal: Enter or Escape or Mod1+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod1+r mode "default"
}

mode "move" {

		# Move containers
		bindsym h move left 10 px
		bindsym l move right 10 px
		bindsym j move down 10 px
		bindsym k move up 10 px

        # back to normal: Enter or Escape or Mod1+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod1+Control+r mode "default"
}

bindsym Mod1+r mode "resize"
bindsym Mod1+Control+r mode "move"

